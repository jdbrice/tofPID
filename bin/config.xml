<config>

	<input>
		<rootIn file="qa.root" />
		<dataDir maxFiles="10" >/star/institutions/rice/jdb/run14/auau15/rcp/data/output/</dataDir>
	</input>
	<output>
		<base></base>
		<root>qa.root</root>
		<report>rqa.pdf</report>
	</output>

	<!-- histograms -->
	<histo>
		<m2p type="2D" title="M^2 vs momentum; p [GeV]; M^2 [GeV^2/c^2]"  nBinsX="100" x1="0" x2="3"
				nBinsY="1000" y1="-.2" y2="1.4" draw="colz" />
		<m2 type="1D" title="M^2; M^2 [GeV^2/c^2]; N_{Events}"  nBinsX="100" x1="-.4" x2="1.2" draw="h" />
	</histo>

	<style>
		<1D draw="h" linecolor="1" logY="0" />
		<mass2p draw="colz" logZ="1" />
	</style>

	<!-- Analysis cuts -->
	<cut>
		<central>.05</central>
		<peripheral>.40</peripheral>
	</cut>

</config>
